generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  // shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Orders {
  id            Int           @id @default(autoincrement())
  name          String?       @db.VarChar(25)
  surname       String?       @db.VarChar(25)
  email         String?       @db.VarChar(100)
  phone         String?       @db.VarChar(12)
  age           Int?
  course        Course?
  course_format CourseFormat?
  course_type   CourseType?
  sum           Int?
  alreadyPaid   Int?
  group         String?
  created_at    DateTime?     @db.DateTime(6)
  utm           String?       @db.VarChar(100)
  msg           String?       @db.VarChar(100)
  manager       String?
  status        Status?
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  surname   String
  isActive  Boolean
  lastLogin DateTime
  role      Role
}

enum Role {
  admin
  manager
}

enum Status {
  In_work
  New
  Aggre
  Disaggre
  Dubbing
}

enum Course {
  FS
  QACX
  JCX
  JSCX
  FE
  PCX
}

enum CourseType {
  pro
  minimal
  premium
  incubator
  vip
}

enum CourseFormat {
  static
  online
}
